<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="3.0-add-gift-and-delivered-columns" author="marwa">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="orders"/>
        </preConditions>

        <comment>Add gift_message and delivered_at columns to orders table</comment>

        <addColumn tableName="orders">
            <column name="gift_message" type="TEXT">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <addColumn tableName="orders">
            <column name="delivered_at" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>


</databaseChangeLog>


